<!DOCTYPE html>
<html>
  <head>
    <title>GIS</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="gmaps.js"></script>
    <script src="http://maps.google.com/maps/api/js"></script>
    <style type="text/css">
    #map {
      width: 100%;
      height: 400px;
    }
  </style>
  </head>

  <body>
    <div class="navbar navbar-inverse navbar-fixed-top" role="navigation">   
       <div class="container">   
         <div class="navbar-header">   
            <a class="navbar-brand" href="http://localhost:3000/">Kajian Cloud</a>   
         </div>    
         <ul class="nav navbar-nav navbar-right">   
            <% if current_user %>
              <ul class="nav navbar-nav">    
                <li><%= link_to "All Kajian", "http://localhost:3000/events" %></li>  
                <li><%= link_to "Tambah Kajian", "http://localhost:3000/events/new" %></li>  
                <li><%= link_to current_user.username, "#" %></li> 
              </ul>  
              <li><%= link_to 'Log-Out', session_path(current_user.id), method: "DELETE" %></li>   
            <% else %>
            <li><%= link_to 'Log-in', new_session_path %></li>
            <li><%= link_to "Register", "http://localhost:3000/sign_up" %></li>   
            <% end %>
         </ul>   
       </div>   
    </div>   
    <div class="container">   
       <% flash.each do |type, message| %>   
       <div class="alert <%= flash_class type %> alert-dismissable">   
         <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>   
         <p><%= message %></p>   
       </div>   
       <% end %>   
       <%= yield %>   
    </div> 
  </body>
</html>
